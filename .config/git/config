# COMMAND CONFIG
[init]
    defaultBranch = main

[status]
    short = true
    branch = true
    showStath = true
    showUntrackedFiles = all

[diff]
    context = 3
    renames = copies
    interHunkContext = 10 # merge near hunks in diffs

[interactive]
    singlekey = true

[push]
    autoSetupRemote = true

[log]
    abbrevCommit = true
    graphColors = blue,yellow,cyan,magenta,green,red


# MISC
